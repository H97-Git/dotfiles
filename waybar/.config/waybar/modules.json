{
  "hyprland/window": {
    "format": "{title}",
    "max-length": 100,
    "icon": true
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "„äÄ www",
      "2": "„äÅ dev",
      "3": "„äÇ default",
      "4": "„äÉ notes",
      "5": "„äÑ chat",
      "6": "„äÖ media",
      "7": "„äÜ other",
      "8": "„äá gaming"
    }
  },
  "cpu": {
    "format": "Ôíº  {usage}%"
  },
  "memory": {
    "format": "ÓøÖ  {used:0.1f}G/{total}G"
  },
  "temperature": {
    "format": "Ôãâ  {temperatureC}¬∞C"
  },
  "disk": {
    "path": "/",
    "format": "ÔÇ†  {used}/{total}",
    "interval": 60
  },
  "network": {
    "format-ethernet": "Óºâ  ‚á£ {bandwidthUpBits} ‚á° {bandwidthUpBits}",
    "format-disconnected": "Offline",
    "tooltip-format": "{ifname} ¬∑ {ipaddr}",
    "interval": 3
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "ÔÄ¶ mute",
    "format-icons": ["ÔÄß ", "ÔÄ® "],
    "on-click": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },
  "clock": {
    "format": "{:%a, %d %b %Y %T} ÔÄó ",
    "interval": 1,
    "tooltip-format": "Click to copy",
    "on-click": "~/.local/bin/copy-datetime.sh left",
    "on-click-right": "~/.local/bin/copy-datetime.sh right"
  },
  "custom/bell": {
    "format": "üîî",
    "on-click": "swaync-client -t -sw"
  },
  "tray": {
    "spacing": 10
  },
  "custom/headset": {
    "exec": "~/.local/bin/headset-battery",
    "interval": 60,
    "return-type": "json",
    "tooltip": true
  },
  "custom/disks": {
    "exec": "~/.local/bin/disks",
    "interval": 60,
    "return-type": "json",
    "tooltip": true
  },
  "custom/music": {
    "format": "{}",
    "return-type": "json",
    "exec": "waybar-module-music --marquee --title-width 15 --effect-speed 150",
    "on-click": "playerctl play-pause"
  },
  "custom/updates": {
    "format": "{} {icon}",
    "return-type": "json",
    "format-icons": {
      "has-updates": "Û±ç∑",
      "updated": ""
    },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --no-zero-output"
  }
}
